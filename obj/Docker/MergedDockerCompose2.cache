services:
  pandologicapi:
    build:
      context: /Users/tzurielya/RiderProjects/PandoLogic
      dockerfile: PandoLogic.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: PandoLogic.API
      target: base
    container_name: pandologicapi
    depends_on:
      pandologicdb:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
    image: pandologic:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/net5.0/PandoLogic.API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8081
      target: 80
    tty: true
    volumes:
    - /Users/tzurielya/RiderProjects/PandoLogic/PandoLogic.API:/app:rw
    - /Users/tzurielya/vsdbg/vs2017u5:/remote_debugger:rw
    - /Users/tzurielya/.nuget/packages:/root/.nuget/packages:ro
    - /Users/tzurielya/RiderProjects/PandoLogic:/src:rw
  pandologicdb:
    container_name: pandologicdb
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: ABC123abc
    image: mcr.microsoft.com/mssql/server:2017-latest
    ports:
    - published: 1433
      target: 1433
    restart: always
version: '3.4'