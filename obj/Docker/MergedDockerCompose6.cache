services:
  pandologicapi:
    build:
      context: /Users/tzurielya/RiderProjects/PandoLogic
      dockerfile: PandoLogic.API/Dockerfile
    container_name: pandologicapi
    depends_on:
      pandologicdb:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: pandologic
    ports:
    - published: 8081
      target: 80
  pandologicdb:
    container_name: pandologicdb
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: ABC123abc
    image: mcr.microsoft.com/mssql/server:2017-latest
    ports:
    - published: 1433
      target: 1433
    restart: always
  pandologicweb:
    build:
      context: /Users/tzurielya/RiderProjects/PandoLogic/pandologic.web
      dockerfile: Dockerfile
    container_name: pandologicweb
    ports:
    - published: 8080
      target: 8080
    volumes:
    - /Users/tzurielya/RiderProjects/PandoLogic/my-app:/usr/src/app/my-app:rw
    - /usr/src/app/my-app/node_modules
version: '3.4'